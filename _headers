# Cloudflare Pages headers configuration
# https://developers.cloudflare.com/pages/platform/headers/

# Cache static assets
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# API routes
/api/*
  Cache-Control: no-cache

# Auth routes
/auth/*
  Cache-Control: no-cache

# Dashboard routes (protected)
/dashboard/*
  Cache-Control: no-cache
